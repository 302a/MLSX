/*总体主盒子*/  
.container {  
  position: relative;  
  width: 100%;    
  background-color: #fff;  
  color: #939393;  
}
 /*左侧栏主盒子*/  
.nav_left{  
  position: fixed;  
  top: 161.9rpx;  
  left: 0;  
  flex: 1;   
  display: inline-block;  
  width: 25%;  
  height: 100%;   
  background: #f5f5f5;  
  text-align: center;  
  overflow: auto;
}  
/*左侧栏list的item*/  
.nav_left .nav_left_items{  
  height: 95rpx;  
  line-height: 95rpx;  
  padding: 14rpx 0;  
  border-bottom: 2rpx solid #dedede; 
  font-size: 30rpx; 
}  
/*左侧栏list的item被选中时*/  
.nav_left .nav_left_items.active{  
  background: #fff;  
  color: #3385ff; 
  border-left: 7rpx solid #3385ff;
}  
/*右侧栏主盒子*/  
.nav_right{   
  position: absolute;  
  top: 0;  
  right: 0;  
  flex: 1;  
  width: 75%;  
  height: 2381rpx;  
  padding: 24rpx;  
  box-sizing: border-box;  
  background: #fff;
}  
/*右侧栏list的item*/  
.nav_right .nav_right_items{  
  /*浮动向左*/  
  /* float: left;   */
  /*每个item设置宽度是33.33%*/  
  width: 100%;  
