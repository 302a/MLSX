page {
  background: #f5f5f5;
}
.msg-box {
  width: 100%;
  height: 154rpx;
  margin-top: 44rpx;
  background: #fff;
}
.user-icon {
  width: 126rpx;
  height: 126rpx;
  float: left;
  margin-left: 60rpx;
  margin-top: -20rpx;
  border-radius: 63rpx;
  overflow: hidden;
}
.user {
  float: left;
  margin-left: 24rpx;
}
.user-msg {
  margin-top: 40rpx;
  height: 40rpx;
}
.username {
  font-size: 24rpx;
  color: #ff8c61;
  float: left;
}
.type {
  float: left;
  margin-left: 10rpx;
  width: 120rpx;
  height: 40rpx;
  border-radius: 20rpx;
  border: 2rpx solid #ff8c61;
  font-size: 20rpx;
  line-height: 40rpx;
  color: #ff4500;
  text-align: center;
}
.time {
  font-size: 20rpx;
  color: #707070;
  margin-top: 8rpx;
}
.topic {
  font-size: 36rpx;
  color: #333333;
  margin-top: 52rpx;
  margin-left: 20rpx;
}
.member-warp {
  width: 100%;
  height: 232rpx;
  overflow: auto;
  margin-top: 36rpx;
}
.member {
  width: 900rpx;
  height: 232rpx;
  flex-wrap: nowrap;
}
.list {
  width: 202rpx;
  height: 232rpx;
  margin:0 10rpx;
  float: left;
  position: relative;
}
.list>image {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 16rpx;
  right: 16rpx;
}
.list view:nth-of-type(1) {
  font-size: 40rpx;
  margin: 0 auto;
  text-align: center;
  margin-top: 60rpx;
}
.list view:nth-of-type(2) {
  font-size: 36rpx;
  margin: 0 auto;
  text-align: center;
  margin-top: 36rpx;
}
.pay-btn {
  width: 422rpx;
  height: 92rpx;
  border-radius: 36rpx;
  background: #ff5414;
  color: #fff;
  font-size: 28rpx;
  line-height: 50rpx;
  text-align: center;
  position: absolute;
  left: 20%;
  bottom: 46rpx;
}