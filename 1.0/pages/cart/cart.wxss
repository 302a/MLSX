/*全局样式*/

page {

	padding: 20px 0;

}

 

/*主容器*/

.stepper {

	width: 80px;

	height: 26px;

	/*给主容器设一个边框*/



}

 


 

/*数值*/

.stepper input {

	width: 40px;

	height: 26px;

	float: left;

	margin: 0 auto;

	text-align: center;

	font-size: 12px;

	/*给中间的input设置左右边框即可*/

	border-left: 1px solid #ccc;

	border-right: 1px solid #ccc;

}

 
 

/*禁用样式*/

.stepper .disabled{

	color: #ccc;

}
