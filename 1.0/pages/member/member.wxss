page {
  background: #f5f5f5;
}
.member {
  width: 100%;
}
.topic {
  width: 100%;
  font-size: 36rpx;
  color: #fd6931;
  text-align: center;
  margin-top: 28rpx;
}
.rights-box1 {
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.rights {
  height: 124rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.rights text {
  font-size: 28rpx;
  color: #757575;
}

.rights-box2 {
  width: 690rpx;
  height: 330rpx;
  background: #fff;
  border-radius: 50rpx;
  margin: 40rpx auto;
}
.rights-box2 view {
  font-size: 28rpx;
  color: #3d3d3d;
  line-height: 70rpx;
}
.pay {
  width: 422rpx;
  height: 72rpx;
  background: #ff5414;
  border-radius: 36rpx;
  margin: 0 auto;
  margin-top: 120rpx;
}
.pay view:nth-child(1) {
  font-size: 28rpx;
  color: #fff;
  text-align: center;
  padding-top: 6rpx;
}
.pay view:nth-child(2) {
  font-size: 20rpx;
  color: #c2c2c2;
  text-align: center;
}