<view class="evaluate">
  <view class="evaluate-box">
    <view class="evaluate-top">
      <image src="/images/evaluate_page/01.png" ></image>
      <view class="level">
        <view class="level-list">
          <image src="../../images/evaluate_page/04.png" style="width: 72rpx;height: 72rpx;"></image>
          <view>好评</view>
        </view>
        <view class="level-list">
          <image src="../../images/evaluate_page/05.png"></image>
          <view>中评</view>
        </view>
        <view class="level-list">
          <image src="../../images/evaluate_page/06.png"></image>
          <view>差评</view>
        </view>
      </view>
    </view>
    <view class="evaluate-list">
      <view class="left">实物描述</view>
        <view class="right">
          <view bindtap="starTap1" data-index="{{index}}" class="star" wx:for="{{userStars1}}" wx:key="index">
            <image src="{{item}}"></image>
          </view>
        </view>
    </view>

    <view class="evaluate-list">
      <view class="left">物流服务</view>
        <view class="right">
          <view bindtap="starTap2" data-index="{{index}}"  class="star" wx:for="{{userStars2}}" wx:key="index">
            <image src="{{item}}"></image>
          </view>
        </view>
    </view>
    
    <view class="evaluate-list">
      <view class="left">服务态度</view>
        <view class="right">
          <view bindtap="starTap3" data-index="{{index}}"  class="star" wx:for="{{userStars3}}" wx:key="index">
            <image src="{{item}}"></image>
          </view>
        </view>
    </view>
  </view>
  <view class="evaluate-btn" bindtap="evaluateSuccess">发布</view>
</view>
